# Application Configuration
APP_NAME="SistemaBase Framework"
APP_ENV=local
APP_DEBUG=true
APP_URL=http://localhost
APP_TIMEZONE=America/Sao_Paulo
APP_LOCALE=pt_BR

# Database Configuration
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=sistemabase
DB_USERNAME=root
DB_PASSWORD=
DB_CHARSET=utf8mb4
DB_COLLATION=utf8mb4_unicode_ci

# Session Configuration
SESSION_DRIVER=file
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

# Security
APP_KEY=
JWT_SECRET=base64:your-secret-key-here
JWT_EXPIRATION=3600
PASSWORD_BCRYPT_ROUNDS=12

# Email Configuration
MAIL_DRIVER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@sistemabase.com
MAIL_FROM_NAME="${APP_NAME}"

# AWS Configuration (Future)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# Logging
LOG_CHANNEL=daily
LOG_LEVEL=debug
LOG_PATH=storage/logs

# Cache Configuration
CACHE_DRIVER=file
CACHE_PREFIX=sistemabase_cache

# Multi-tenant Configuration
MULTI_TENANT_ENABLED=true
TENANT_COLUMN=user_id

# API Configuration
API_PREFIX=api
API_VERSION=v1
API_RATE_LIMIT=60

