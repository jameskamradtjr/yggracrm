{
    "name": "sistemabase/framework",
    "description": "Framework PHP base robusto para projetos empresariais - Similar ao Laravel com melhores prÃ¡ticas",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Equipe de Desenvolvimento",
            "email": "dev@sistemabase.com"
        }
    ],
    "require": {
        "php": ">=8.1",
        "ext-pdo": "*",
        "ext-json": "*",
        "ext-mbstring": "*",
        "vlucas/phpdotenv": "^5.5",
        "phpmailer/phpmailer": "^6.8",
        "firebase/php-jwt": "^6.8",
        "ramsey/uuid": "^4.7"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "phpstan/phpstan": "^1.10",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Core\\": "src/Core/",
            "Database\\": "database/",
            "Routes\\": "routes/"
        },
        "files": [
            "src/Helpers/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "test": "phpunit",
        "phpstan": "phpstan analyse",
        "phpcs": "phpcs --standard=PSR12 app src"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "php-http/discovery": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}

